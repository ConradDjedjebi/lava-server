[Unit]
Description=LAVA scheduler
After=network.target remote-fs.target

[Service]
Type=simple
Environment=LOGLEVEL=info LOGFILE=/var/log/lava-server/lava-scheduler.log
EnvironmentFile=-/etc/default/lava-server
EnvironmentFile=-/etc/lava-server/lava-server
ExecStart=/usr/bin/lava-server manage scheduler --loglevel $LOGLEVEL --logfile $LOGFILE
Restart=always

[Install]
WantedBy=multi-user.target
